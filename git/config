[alias]
  a     = add
  b     = for-each-ref --format='  %(color:yellow)%(objectname:short)%(color:reset) %(color:bold green)%(committerdate:iso)%(color:reset) %(color:bold white)%(HEAD)%(color:reset) %(color:bold red)%(refname:strip=1)%(color:reset)  %(contents:subject) %(color:bold cyan)%(authorname)%(color:reset) '
  s     = status
  d     = diff
  la    = log --graph --decorate --oneline --all
  lf    = log --graph --decorate --pretty=format:'%C(auto)%h %Cgreen%ad %C(blue)%an %Creset%s %Cred%d%Creset' --date=format:'%Y-%m-%d %H:%M'
  l     = log --graph --decorate --pretty=format:'%C(auto)%h %Cgreen%ad %C(blue)%an %Creset%s %Cred%d%Creset' --date=format:'%Y-%m-%d %H:%M' -n 30
  lc    = rev-list --all --count
  co    = checkout
  br    = branch
  ca    = commit -v --amend
  ci    = commit -v
  df    = diff
  dc    = diff --cached
  ds    = diff --stat
  dt    = describe --tags --long
  sh    = show
  dtv   = describe --tags --long --match 'v*'
  pb    = pull --rebase
  ph    = push
  ups   = "!git push -u origin HEAD"
  st    = stash
  sp    = stash pop

[user]
	email = sol@hiqdev.com
	name = Andrii Vasyliev
[init]
  defaultBranch = master
[pull]
  ff = only
[pager]
  for-each-ref = less -R
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
